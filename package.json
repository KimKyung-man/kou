{
  "name": "kou",
  "version": "0.0.0",
  "description": "A minimal language compiled into wasm bytecode",
  "main": "index.js",
  "bin": {
    "kou": "bin/kou"
  },
  "scripts": {
    "build": "tsc",
    "dev": "sane 'npm run format && npm run build' src",
    "prettier": "prettier --parser typescript --single-quote --trailing-comma all 'src/**/*.ts'",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- -l",
    "test": "npm run check-format && npm run build",
    "release": "npm run build && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utatti/kou.git"
  },
  "author": "Hyunje Jun <me@noraesae.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/utatti/kou/issues"
  },
  "homepage": "https://github.com/utatti/kou",
  "devDependencies": {
    "prettier": "^1.8.2",
    "sane": "^2.2.0",
    "typescript": "^2.6.1"
  }
}
